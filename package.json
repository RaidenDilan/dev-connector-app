{
  "name": "dev-connector-app",
  "version": "1.0.0",
  "description": "Social network for developers",
  "main": "server.js",
  "engines": {
    "node": "10.21.x",
    "npm": "6.14.x"
  },
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Raiden Dilan <raiden18@me.com> (https://www.raidendilan.co.uk)",
  "license": "MIT",
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none",
          "ignoreRestSiblings": false
        }
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "object-curly-newline": 0,
      "no-param-reassign": 0,
      "no-console": 0,
      "no-undef": 0,
      "no-shadow": 0,
      "no-underscore-dangle": 0,
      "no-multi-assign": 0,
      "eol-last": 0,
      "operator-linebreak": [
        "warn",
        "after"
      ],
      "arrow-parens": [
        1,
        "as-needed",
        {
          "requireForBlockBody": true
        }
      ],
      "implicit-arrow-linebreak": 0,
      "prefer-const": [
        0,
        {
          "destructuring": "all",
          "ignoreReadBeforeAssign": false
        }
      ],
      "consistent-return": 0,
      "max-len": 0,
      "template-curly-spacing": [
        "warn",
        "always"
      ]
    }
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.14",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-react": "^7.20.0",
    "nodemon": "^2.0.4"
  }
}